<h3>Location Details</h3><br />
<strong>Name:&nbsp;&nbsp;</strong>
	<%= @location.name %><br /><br />

<strong>Address:&nbsp;&nbsp;</strong>
	<%= "#{@location.street_1} #{@location.street_2}, #{@location.city}, #{@location.state} #{@location.zip}" %><br /><br />

<strong>Maximum Capacity:&nbsp;&nbsp;</strong>
	<%= @location.max_capacity %><br /><br />

<strong>Active?&nbsp;&nbsp;</strong>
  <%= @location.active ? "Yes" : "No" %><br /><br />

<% if can? :update, Location %>
	<%= link_to "Edit this location", edit_location_path(@location), class: "button tiny radius" %>&nbsp;&nbsp;
<% end %>
<% if can? :destroy, Location %>
	<%= link_to 'Destroy location', location_path(@location), data: { confirm: 'Are you sure you want to delete this location?' }, method: :delete, class: "button tiny radius alert" %>
<% end %>