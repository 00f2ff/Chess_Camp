<!-- Only admins have control over locations -->
<% if can? :create, Location %>
	<div class="row">
		<div class="small-7 columns">
			<!-- MAIN CONTENT GOES HERE -->
			<%= render :partial => "active_locations" %>
			<br />
			<%= link_to "Add a new location", new_location_path, class: "button tiny success radius" %>
		</div>

		<div class="small-1 columns">
			&nbsp;
		</div>

		<div class="small-4 columns">
			<!-- SIDEBAR CONTENT GOES HERE -->
			<%= render partial: 'partials/inactives', locals: { inactive: @inactive_locations, inactive_type: 'Locations' } %>
		</div>
	</div>
<% end %>