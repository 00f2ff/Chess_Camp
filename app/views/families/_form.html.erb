<%= simple_form_for(@family, html: { class: 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend><%= controller.action_name.capitalize %> Family</legend>
		<%= f.input :family_name %>
		<%= f.input :parent_first_name %>
		<%= f.input :email %>
		<%= f.input :phone %>
		<%= f.input :active %>
	</fieldset>
	<div class="form-actions">
    <%= f.submit nil, class: 'button tiny radius' %>
    <%= link_to 'Back to List of Families', locations_path, :class => 'button tiny secondary radius' %>
  </div>

<% end %>