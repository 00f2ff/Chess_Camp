<!-- Only admins have control over families -->
<% if current_user && current_user.role == 'admin' %>
	<div class="row">
		<div class="small-7 columns">
			<!-- MAIN CONTENT GOES HERE -->
			<%= render :partial => "active_families" %>
			<br />
			<%= link_to "Add a new family", new_family_path, class: "button tiny success radius" %>
		</div>

		<div class="small-1 columns">
			&nbsp;
		</div>

		<div class="small-4 columns">
			<!-- SIDEBAR CONTENT GOES HERE -->
			<%= render partial: 'partials/inactives', locals: { inactive: @inactive_families, inactive_type: 'Families' } %>
		</div>
	</div>
<% end %>