<%= simple_form_for @registration, html: { class: 'form-horizontal' } do |f| %>
	<%= @registration.errors.messages %>
	<fieldset>
		<legend><%= controller.action_name.capitalize %> Registration</legend>
		<%= f.association :camp %>
		<%= f.association :student, collection: @eligibleStudents %>
		<%= f.input :payment_status, :collection => [['Deposit','deposit'],['Full','full']], as: :radio_buttons %>
		<%= f.input :points_earned %>
	</fieldset>

	<div class="form-actions">
    <%= f.submit nil, class: 'button radius' %>
    <%= link_to 'Back to camp', @camp, :class => 'button secondary radius' %>
  </div>
<% end %>
