<% unless camps.empty? %>
  <!-- <h3>&nbsp;</h3> -->
  <h5><%= status %> Camps</h5>
  <table>
    <tr>
      <th></th>
      <th></th>
    <tr>
    <% camps.each do |camp| %>
      <tr>
        <td><%= link_to camp.name, camp_path(camp) %></td>
        <td><%= "(#{camp.start_date.strftime("%m/%d/%y")})" %></td>
      </tr>
    <% end %>
  </table>

<% else %>
  <h5>No <%= status %> Camps</h5>
<% end %>

