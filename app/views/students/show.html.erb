<!-- guests can't see student profiles -->
<% if can? :read, Student %>
  <div class="row">
    <div class="small-7 columns">
      <!-- MAIN CONTENT GOES HERE -->
      <%= render :partial => "student_details" %>
    </div>

    <div class="small-1 columns">
      &nbsp;
    </div>

    <div class="small-4 columns">
      <!-- SIDEBAR CONTENT GOES HERE -->
      <%= render :partial => "student_camps", locals: { status: "Upcoming", camps: @upcoming_camps } %>
      <p>&nbsp;</p>
      <%= render :partial => "student_camps", locals: { status: "Past", camps: @past_camps } %>
    </div>
  </div>
<% end %>