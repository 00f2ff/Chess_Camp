<!-- guests can't see student profiles. prevents url entry -->
<% if can? :read, Student %>
	<h3>Student Details</h3><br />
	<strong>Name:&nbsp;&nbsp;</strong>
		<%= @student.proper_name %><br /><br />

	<strong>Age:&nbsp;&nbsp;</strong>
		<%= @student.age %><br /><br />

	<strong>Age:&nbsp;&nbsp;</strong>
		<%= @student.date_of_birth.strftime("%m/%d/%Y") %><br /><br />

	<strong>Rating:&nbsp;&nbsp;</strong>
		<%= @student.rating.zero? ? "Unrated" : @student.rating %><br /><br />

	<strong>Active?&nbsp;&nbsp;</strong>
	  <%= @student.active ? "Yes" : "No" %><br /><br />

	<strong>Emergency Contact:&nbsp;&nbsp;</strong>
		<%= link_to "#{@family.parent_first_name} #{@family.family_name}", family_path(@family) %><br /><br />
<% end %>

<!-- admins can edit or destroy students -->
<% if can :update, Student %>
	<%= link_to "Edit this student", edit_student_path(@student), class: "button tiny radius" %>&nbsp;&nbsp;
<% end %>
<% if can :destroy, Student %>
	<%= link_to 'Destroy student', student_path(@student), data: { confirm: 'Are you sure you want to delete this student?' }, method: :delete, class: "button tiny radius alert" %>
<% end %>