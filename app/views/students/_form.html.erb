<%= simple_form_for(@student, html: { class: 'form-horizontal' }) do |f| %>
	<fieldset>
		<legend><%= controller.action_name.capitalize %> Student</legend>
		<%= f.input :first_name %>
		<%= f.input :last_name %>
		<%= f.input :family_id, collection: Family.active.alphabetical, label_method: :family_name, prompt: "Select family..." %>
		<%= f.input :date_of_birth, label: "Date of Birth", as: :string, :input_html => {:class => "avg datepicker"} %>
		<%= f.input :rating %>
		<%= f.input :active %>
	</fieldset>

	<div class="form-actions">
		<%= f.submit nil, class: 'button tiny radius' %>
		<%= link_to 'Back to List of Students', students_path, :class => 'button tiny secondary radius' %>
	</div>

<% end %>