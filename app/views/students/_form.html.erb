<%= simple_form_for(@student, html: { class: 'form-horizontal' }) do |f| %>

	<h3><%= controller.action_name.capitalize %> Student</h3>
	<%= f.input :first_name %>
	<%= f.input :last_name %>
	<%= f.input :family_id, collection: Family.active.alphabetical, prompt: "Select family..." %>
	<%= f.input :date_of_birth %>
	<!-- , as: :bootstrap_datepicker -->
	<!-- however, I want the mm/dd/yyyy style instead -->
	<%= f.input :active %>

	<div class="form-actions">
		<%= f.submit nil, class: 'button radius' %>
		<%= link_to 'Back to list of students', students_path, :class => 'button secondary radius' %>
	</div>

<% end %>

